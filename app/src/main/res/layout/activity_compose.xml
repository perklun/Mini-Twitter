<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.codepath.apps.TwitterClient.activities.ComposeActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/flProfile_compose">
    </FrameLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etComposeTweet"
        android:hint="What's happening?"
        android:editable="true"
        android:lines="3"
        android:linksClickable="false"
        android:maxLines="4"
        android:textAlignment="textStart"
        android:gravity="start"
        android:layout_below="@+id/flProfile_compose"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#00000000"
        android:paddingTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="12sp" />

    <Button
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:text="TWEET"
        android:id="@+id/btnSubmit"
        android:layout_below="@+id/etComposeTweet"
        android:layout_centerHorizontal="true"
        android:onClick="onSubmit"
        android:background="@drawable/button_background"
        android:textSize="10dp"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvCount"
        android:layout_below="@+id/etComposeTweet"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:textSize="11sp" />

</RelativeLayout>
